<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:background="#EAECF6"
        android:padding="8dp"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="-20dp">

        <TextView
            android:id="@+id/nameTxtView"
            android:layout_width="135dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/contentTxtView"
            android:layout_width="285dp"
            android:layout_height="195dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="60dp"
            android:ellipsize="end"
            android:maxLines="10"
            android:hyphenationFrequency="full"
            android:text="Text..."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dateTxtView"
            android:layout_width="135dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Date"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTxtView"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/nameTxtView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/star2" />

        <TextView
            android:id="@+id/rateTextView"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="0/10"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
